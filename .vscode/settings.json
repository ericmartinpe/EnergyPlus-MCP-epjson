{
  // GitHub Copilot MCP Server Configuration
  "github.copilot.chat.mcp.servers": {
    "energyplus": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        "${workspaceFolder}:/workspace",
