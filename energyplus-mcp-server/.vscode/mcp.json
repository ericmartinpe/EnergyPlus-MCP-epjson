{
  "servers": {
    "filesystem": {
      "type": "stdio", 
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "/workspace/energyplus-mcp-server",
        "/app/software/EnergyPlusV25-1-0",
        "/tmp"
      ]
    },
    "energyplus": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        "${workspaceFolder}:/workspace",
        "-w",
        "/workspace/energyplus-mcp-server",
        "energyplus-mcp-dev",
        "uv",
        "run",
        "python",
        "-m",
        "energyplus_mcp_server.server"
      ],
      "env": {}
    }
  }
}